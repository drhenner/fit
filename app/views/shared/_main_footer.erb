<%
loop_footer_tabs = {
  #'About UFC FIT'         => about_path,
  'Privacy Policy'        => privacy_policy_path,
  'FAQs'                  => I18n.t(:desk_dot_com_url),
  'Exchanges and Returns' => shipping_returns_path,
  'Terms & Conditions'    => terms_path
  #'Customer Service'    => faq_customer_service_path
}
%>
<div class='footer-buffer-wrapper'>
  <div class='footer-buffer twelve large-12'>
    &nbsp;
  </div>
</div>
<div id="footer_wrapper" >
  <div class='background_wrapper'>
    <div class='row inner-footer_wrapper'>
      <div class="four large-4 columns">
        <ul  class='inline-list'>
          <li class="copyright">Â© <%= Time.zone.now.year %> Zuffa Inc. All rights reserved</li>
        </ul>
      </div>
      <div  class='eight large-8 columns'>
        <ul id='main-footer-tabs' class='inline-list'>
            <li><%= link_to_unless_current 'Home', root_path %></li>
          <% if !Settings.in_signup_period || !in_production? %>
