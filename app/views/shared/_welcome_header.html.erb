<div class="">
  <nav class="top-bar">
    <ul>
      <!-- Title Area -->
      <li class="name">
        <h1>
          <%= link_to  root_path do %>
            <%= image_tag 'header/ufcfit_banner.png', :alt => 'UFCFIT', :style => 'width: 125px;' %>
          <% end %>
        </h1>
      </li>
      <li class="toggle-topbar"><a href="#"></a></li>
    </ul>

    <section>
      <!-- Left Nav Section -->
      <ul class="left">
        <li class="divider"></li>
        <% if Settings.allow_orders %>
          <li class="has-dropdown">
            <%= link_to 'Products', products_path, :class => 'active' %>
            <ul class="dropdown">
              <% product_types.each do |pt_tab| %>
                <li> <%= link_to_unless_current pt_tab.name.capitalize, products_path(:product_type_id => pt_tab.id) %> </li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to 'All Products', products_path %>
              </li>
            </ul>
          </li>
          <li class="divider hide-for-small"></li>
        <% end %>
      </ul>

      <!-- Right Nav Section -->
      <ul class="right">
        <% unless Settings.in_signup_period %>
          <li>
            <%= link_to 'Success Stories', success_stories_path %>
          </li>
          <li>
            <%= link_to 'Program', the_program_path %>
          </li>
          <% if false # remove until we have content%>
            <li>
              <%= link_to 'Lifestyle', lifestyle_path %>
            </li>
          <% end %>
          <li>
            <%= link_to 'Meal Plan', meal_plan_path %>
          </li>
          <li>
            <%= link_to 'The Proof', the_proof_path %>
          </li>
          <li>
            <%= link_to preorders_path, :method => 'post' do %>
              <span style="background: #c60000;padding: 2px;">PRE-ORDER</span>
            <% end %>
          </li>
        <% end %>
        <li>
          <%= link_to I18n.t(:facebook_url), :style => 'padding: 0 5px;' do %>
            <i class="foundicon-facebook"></i>
          <% end %>
        </li>
        <li>
          <%= link_to I18n.t(:twitter_url), :style => 'padding: 0 5px;' do %>
            <i class="foundicon-twitter"></i>
          <% end %>
        </li>
        <li>
          <%= link_to I18n.t(:instagram_url), :style => 'padding: 0 5px;' do %>
            <i class="foundicon-instagram"></i>
          <% end %>
        </li>
        <% if I18n.t(:google_plus_url).present? && I18n.t(:google_plus_url).length > 4 %>
          <li>
            <%= link_to I18n.t(:google_plus_url), :style => 'padding: 0 5px;' do %>
              <i class="foundicon-google-plus"></i>
            <% end %>
          </li>
        <% end %>
        <% if I18n.t(:youtube_url).present? && I18n.t(:youtube_url).length > 4 %>
          <li>
            <%= link_to I18n.t(:youtube_url), :style => 'padding: 0 5px;' do %>
              <i class="foundicon-youtube"></i>
            <% end %>
          </li>
        <% end %>
        <li class="divider show-for-medium-and-up"></li>
        <li>
          <%= link_to I18n.t(:desk_dot_com_url), :style => 'padding: 0 5px;' do %>
            <i class="icon-question-sign"></i>
          <% end %>
        </li>
        <li class="divider show-for-medium-and-up"></li>
        <% if Settings.allow_orders && session_cart.shopping_cart_items.size > 0 %>
          <li>
            <%= link_to shopping_cart_items_path do %>
              <i class="icon-shopping-cart"></i> <%= session_cart.shopping_cart_items.size %>
            <% end %>
          </li>
        <% end %>
        <li class="has-dropdown">
          <% unless current_user %>
            <li><%= link_to 'Log In',  login_path %></li>
          <% else %>
            <a href="#">Your Account</a>
          <% end %>
          <% if current_user %>
            <ul class="dropdown">
              <% if current_user.admin? %>
                <li><%= link_to 'Admin', admin_users_path %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to myaccount_overview_path do %>
                  <label>Account</label>
                <% end %>
              </li>
              <li><%= link_to raw('Orders' ), myaccount_orders_path %></li>
              <li><%= link_to 'Addresses', myaccount_addresses_path %></li>
              <li><%= link_to 'Credit Cards', myaccount_credit_cards_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'Log Out', logout_path %></li>
            </ul>
          <% end %>
        </li>
      </ul>
    </section>
  </nav>
</div>
<div data-alert class='alert-box alert browser' style="display:none">
  Your browser needs to be upgraded. Try <a href='https://www.google.com/intl/en/chrome/browser/' style="color:#000;">Chrome</a> or <a href='http://www.mozilla.org/en-US/firefox/new/' style="color:#000;">Firefox</a>.
  <a href='#' class='close'>&times;</a>
</div>
