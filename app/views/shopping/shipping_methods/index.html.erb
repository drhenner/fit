<div id="shipping-methods">
  <div class="row">
    <div class='four columns'>
      <%= render :partial =>  'shopping/tabs' %>
    </div>
    <div class='eight columns'>
      <div class='clearfix'>
        <%= form_tag(shopping_shipping_method_path(session_order.id), :method => :put, :html => {:class => 'custom'}) do -%>
          <% @order_items.group_by(&:shipping_category_id).each do |shipping_category_id, items| %>
            <div class="select-shipping-box background-gray red-border-left">
              <h4 class="margin-0 text-10 bold margin-left-10 padding-left-10 padding-top-10">SELECT A SHIPPING METHOD</h4>

              <div class="row padding-10">
                <ul class='vertical-list padding-left-30'>
                <% items.first.shipping_rate_options(session_order.sub_total).each do |rate| %>
                  <li class='row'>
                    <label for='<%= "shipping_category_#{shipping_category_id}_#{rate.id}" %>'  style='color:#000' class='five large-5 column'>
                      <%= radio_button_tag "shipping_category[#{shipping_category_id}]", rate.id %>
                      <%= rate.name_with_rate %>
                    </label>
                    <% if rate.minimum_charge > 0.0 %>
                      <span  style='color:#333' class='seven large-7 column'>
                        (Qualified because you have more than <%= "#{number_to_currency rate.minimum_charge}" %> of items)
                      </span>
                    <% end %>
                  </li>
                <% end %>
                </ul>
              </div>
            </div>
            <hr style='color:#aac;'/>

            <div class='row'>
              <% items.each do |item| %>
                <div class='four column'>
                  <div class="cropped-150 bottom-10" style="background-image:url('<%= item.variant.product.featured_image(:product) %>')"></div>
                </div>
                <div class='eight column'>
                  <h4 class='red bold text-10'>
                    <%= item.variant.product.name %><%# The Complete UFCFIT Lifestyle Program %>
                  </h4>
                  Quantity: <%= item.quantity %>
                  <%= raw item.variant.display_property_details %>
                </div>
              <% end %>
            </div>
          <% end %>
          <hr style='color:#aac;'/>
          <div class='twelve clearfix '>
            <%= submit_tag 'continue', :class => 'button ' %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
