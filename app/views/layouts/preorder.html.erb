<!DOCTYPE html>
<html>
<head>
  <title>
    <%= site_name %> <%= yield :title %>
  </title>
  <link rel="shortcut icon" href="/assets/favicon.ico" />

  <%= stylesheet_link_tag "normalize.css" %>
  <%= stylesheet_link_tag "foundation.css" %>
  <%= stylesheet_link_tag 'site/app.css' %>
  <%= stylesheet_link_tag 'site/preorder.css' %>
    <!--[if lt IE 8]
  <%= stylesheet_link_tag 'ie.css', :media => 'screen, projection'%>
  <![endif]-->
  <!--[if lt IE 7]
      <%= stylesheet_link_tag 'ie6.css', :media => 'screen, projection' %>
  <![endif]-->
  <%= csrf_meta_tag %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "foundation" %>
  <%= yield :head %>

</head>

<body >
<div id='body_wrapper'>
  <div class="row">
    <%= raw "<p class='flash_notice'> #{notice}</p>"  if notice %>
    <%= raw "<p class='flash_error'>#{alert}</p>"     if alert %>
  </div>

    <%= render :partial => '/shared/preorder_header'%>

    <div id='content_wrapper' class='row'>
      <%= render :partial => '/layouts/placeholder'%>
      <%#= yield %>
    </div>
    <div id='prefooter_wrapper'>&nbsp;</div>
</div>

  <%= render 'shared/main_footer' %>

  <%= yield :bottom %>

  <script>
  jQuery(window).ready(
    function() {
      jQuery('.flash_notice').delay(6000).slideUp( 'slow');
      jQuery('.flash_error').delay(6000).slideUp( 'slow');
    }
  );
  </script>
  <script>
    $(document).foundation();
  </script>

</body>
  <%= render 'shared/google_analytics' unless @disable_ga %>
  <%= yield :below_body %>
</html>
